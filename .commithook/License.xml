<?xml version="1.0"?>
<!-- This is a local configuration file. It is not used in external projects.-->
<config>
    <license>
        <name>console-helper</name>
    </license>
    <!--Validators setup-->
    <validators>
        <License>
            <licenses>
                <console-helper>
                    <text><![CDATA[
/**
 * @license https://raw.githubusercontent.com/andkirby/console-helper/master/LICENSE
 */
                    ]]></text>
                    <test_text>andkirby/console-helper/master/LICENSE</test_text>
                    <paths>
                        <required>
                            <src>src</src>
                        </required>
                    </paths>
                </console-helper>
            </licenses>
        </License>
    </validators>

    <hooks>
        <pre-commit>
            <filetype>
                <php>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </php>
                <phtml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </phtml>
                <coffee>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </coffee>
                <js>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </js>
                <css>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </css>
                <scss>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </scss>
                <xml>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </xml>
                <sh>
                    <filters>
                        <License>1</License>
                    </filters>
                    <validators>
                        <License>1</License>
                    </validators>
                </sh>
            </filetype>
        </pre-commit>
    </hooks>
</config>
